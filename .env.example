# ----------------------------
# Required: Chain + RPC
# ----------------------------

# Monad chain ID (number)
NEXT_PUBLIC_CHAIN_ID=

# Public RPC endpoint used by the client for reads and tx submission
# At least ONE of RPC_URL or RPC_URL_FALLBACK must be provided
NEXT_PUBLIC_RPC_URL=

# Optional fallback RPC (recommended)
NEXT_PUBLIC_RPC_URL_FALLBACK=

# Optional: RPC request timeout in milliseconds
# Defaults to 10000 if unset
NEXT_PUBLIC_RPC_TIMEOUT_MS=


# ----------------------------
# Server-only: Explorer / Data APIs
# ----------------------------

# Explorer API base URL for server-side stats/activity
EXPLORER_API_BASE=

# Explorer API key (server-only; do not expose to the client)
EXPLORER_API_KEY=


# ----------------------------
# Swap Defaults (Public)
# ----------------------------

# Default slippage in basis points (e.g., 50 = 0.50%)
NEXT_PUBLIC_DEFAULT_SLIPPAGE_BPS=50

# Transaction deadline in seconds (e.g., 120)
NEXT_PUBLIC_TX_DEADLINE_SECONDS=120


# ----------------------------
# Protocol Fee (Public UI + On-chain behavior)
# ----------------------------

# Enable protocol fees (true/false)
NEXT_PUBLIC_FEE_ENABLED=false

# Fee in basis points (e.g., 5 = 0.05%)
# Only used if NEXT_PUBLIC_FEE_ENABLED=true
NEXT_PUBLIC_FEE_BPS=5

# Treasury address for protocol fees
# REQUIRED if NEXT_PUBLIC_FEE_ENABLED=true
NEXT_PUBLIC_TREASURY_ADDRESS=


# ----------------------------
# Token Metadata
# ----------------------------

# Token list URL used for symbols/decimals/icons
NEXT_PUBLIC_TOKENLIST_URL=


# ----------------------------
# App / Ops (Optional)
# ----------------------------

# Public site URL for metadata, canonical links, and absolute URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

